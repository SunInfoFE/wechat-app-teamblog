page{
  background: rgb(238, 238, 238);
}
.header{
  background: -webkit-linear-gradient(top,#6fa5ff, #548bf0);
  color: #FFF;
  font-weight: bold;
  text-align: center;
  min-height: 120rpx;
  line-height: 120rpx;
}
.item{
  min-height: 60rpx;
  line-height: 60rpx;
	background: #fff;
	margin-bottom: 20rpx;
  padding:20rpx;
  color: #666;
  font-size: 20rpx;
}
.item .thumb{
	height: 0;
  padding-bottom: 70%;
  overflow: hidden;
  cursor: pointer;
}
.item .thumb .image{
	display: block;
  background-repeat: no-repeat;
  background-position: left 0;
  background-size: 100%;
  width: 100%;
  height: 1000rpx;
  max-width: 100%;
  transform: translateZ(0);
  transition: all .25s linear;
}
.item-title{
  font-weight: bold;
  font-size: 1rem;
}
.item-desc{
  text-align: left;
  white-space: pre-line;
}