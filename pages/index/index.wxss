/**index.wxss**/
page{
  height: 100%;
  overflow: hidden;
}
.container{
  background: -webkit-linear-gradient(top,#6fa5ff, #548bf0);
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: cover;
  padding: 200rpx 0 0;
  min-height: 500rpx;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 20px;
  color: #fff;
  font-size: 2rem;
}
.logo,.word{
	position: absolute;
  z-index: 10;
}
.logo{
  top:30%;
  left: 5%; 
}
.word{
  top: 50%;
  font-size: 1.1rem;
  left:7.6%;
}
.logo image{
	width: 702rpx;
	height: 126rpx;
}
.left,.right{
  position: absolute;
  z-index: 1
}
.left{
  top:-50rpx;
  left: 0;
}
.right{
  top: 60rpx;
  right: 0;
}
.left image{
  width: 140rpx;
  height: 450rpx;
}
.right image{
  width: 366rpx;
  height: 748rpx;
}
.list{
  position: relative;
  z-index: 8;
	padding: 20rpx;
}
.item{
	text-align: center;
	background: #fff;
	margin-bottom: 20rpx;
  padding:20rpx;
  color: #666;
  font-size: 30rpx;
}
.item .thumb{
	height: 0;
  padding-bottom: 70%;
  overflow: hidden;
  cursor: pointer;
}
.item .thumb .image{
	display: block;
  background-repeat: no-repeat;
  background-position: left 0;
  background-size: 100%;
  width: 100%;
  height: 1000px;
  max-width: 100%;
  transform: translateZ(0);
  transition: all .25s linear;
}
.item-title{
	line-height: 3rem;
  font-size: 1.2rem;
}
.nav-wrapper{
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
   width: 100%;
   min-height: 500rpx;
}
.item-nav{
  width: 42%;
  height:200rpx;
  background: rgba(255,255,255,.8);
  z-index: 8;
  border-radius:10rpx;
  font-size: 0.8rem;
}
.item-nav navigator{
  height: 100%;
  display: flex;
  align-items: center;
}
.item-nav image{
  width: 170rpx;
  height: 170rpx;
}
.footer{
  color:#fff;
  min-height: 124rpx;
  font-size: 0.6rem;
  text-align: center;
}
.footer .team{
  padding-top: 30rpx;
}